<% if member_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.select :model, options_for_select({ "メンバーネーム" => "member_name", "ニックネーム" => "member_nick_name", "本のタイトル" => "book_title", "本の紹介文" => "book_body", "ジャンル" => "genre" }) %>
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
    <%= f.text_field :content %>
    <%= f.submit '検索' %>
  <% end %>
<% end %>