<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>member info</h2>
    <%= form_with model:@member, local:true do |f| %>
      <%#= render 'layouts/error_messages', obj: @member %>
      <div class="form-group">
        <%= f.label "名前" %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label "ニックネーム" %>
        <%= f.text_field :nick_name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label "プロフィール画像" %>
        <%= f.file_field :profile_image, class: "form-control-file member_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label "自己紹介" %>
        <%= f.text_area :self_introduction, class: "form-control self_introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
