<div class='container'>
  <div class='row'>

    <div class='col-md-8 offset-md-1'>
      <h2>会員一覧</h2>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>会員名</th>
            <th>ニックネーム</th>
            <th>投稿数</th>
            <th>フォロー</th>
            <th>フォロワー</th>
            <th>フォロー</th>
            <th></th>
          </tr>
        </thead>

        <% @members.each do |member| %>
       <tbody class="table">
          <tr>
            <td><%= link_to member_path(member.id) do %>
            <%#= image_tag member.get_profile_image(100,100) %>
            <% end %></td>

            <td><%#= link_to member.followings.count, member_followings_path(member) %><</td>
            <td><%#= link_to member.followers.count, member_followers_path(member) %></td>
          </tr>
        <% end %>
        </tbody>
     </table>
  </div>
</div>