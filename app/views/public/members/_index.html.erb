<table class='table table-hover table-inverse'>

  <thead>
    <tr>
      <th></th>
      <th>メンバーネーム</th>
      <th>ニックネーム</th>
      <th>投稿数</th>
      <th>フォロー数</th>
      <th>フォロワー数</th>
      <th></th>
    </tr>
  </thead>

  <% members.each do |member| %>
   <tbody class="table">
      <tr>
        <td>
          <% if member.profile_image.attached? %>
            <%= link_to member_path(member.id) do %>
              <%= image_tag member.profile_image, :size => '100x100' %>
            <% end %>
          <% else %>
            <%= link_to member_path(member.id) do %>
              <%= image_tag "no_image.jpg", :size => '100x100', class: "img" %>
            <% end %>
          <% end %>
        </td>
        <td><%= member.full_name%></td>
        <td><%= member.nick_name%></td>
        <td><p><%= member.books.count %>件</p></td>
        <td><%= link_to member.followings.count, member_followings_path(member) %></td>
        <td><%= link_to member.followers.count, member_followers_path(member) %></td>
        <td>
        <% if member.full_name != "guestmember" %>
          <% if current_member != member %>
            <td><%= render "public/relationships/btn", member: member %></td>
          <% else %>
            <%= link_to  member_path(member), class: "btn btn-outline-secondary btn-block member_#{member.id}" do %>
              <i>マイページ</i>
            <% end %>
          <% end %>
        <% end %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>