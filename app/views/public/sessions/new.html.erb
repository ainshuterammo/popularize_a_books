<div class="new_sign container">
  <div class='row justify-content-center pt-5'>
    <h2 class="col-md-auto section-ttl text-center">ログイン</h2>
  </div>
  <div class='row justify-content-center'>
    <div class="col-md-6 px-5 px-sm-0 mx-auto mt-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="text-center">
          <%= flash[:alert] %>
        </div>
        <div class="field row mb-3 justify-content-center">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder =>"メールアドレス", class: 'col-6' %>
        </div>
        <div class="field row mb-3 justify-content-center">
          <%= f.password_field :password, autocomplete: "current-password", :placeholder =>"パスワード", class: 'col-6' %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field row justify-content-center">
            <div class="col-3 justify-content-center">
              <%= f.check_box :remember_me %>
              <%= f.label "記憶させる" %>
            </div>
          </div>
        <% end %>
        <div class='row justify-content-center'>
          <%= f.submit "ログイン", class: "btn btn-primary col-md-6 px-5 px-sm-0 mx-auto my-3" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class='row justify-content-center pb-5'>
    <div class="col-md-auto px-5 px-sm-0 mx-auto">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>