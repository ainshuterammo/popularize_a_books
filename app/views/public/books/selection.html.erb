<div class='container'>
  <div class='row'>
    <% @books.each do |book| %>

    <div class='col-2'>
      <%= image_tag book.large_image_url, :size => '160x200' %>
    </div>

    <div class='col-10'>
      <table class='table'>
        <tr>
          <th>タイトル</th>
          <td><%= book.title %></td>
        </tr>
        <tr>
          <th>著者</th>
          <td><%= book.author %></td>
        </tr>
        <tr>
          <th>出版社</th>
          <td><%= book.publisher_name %></td>
        </tr>
        <tr>
          <td><%= link_to "決定して次に進む", new_book_path(isbn: book.isbn), class: "btn btn-sm btn-success" %></td>
        </tr>
      </table>
    </div>
    <% end %>
    <%= paginate @books %>
  </div>
</div>