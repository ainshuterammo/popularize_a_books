<div class='container'>
  <div class='row'>
    <div class="col-md-4">
      <tr>
        <td>
          <% if @book.image_url %>
            <%= image_tag @book.image_url, size:"240x300", class: "image" %>
          <% else %>
            <%= image_tag "no_image.jpg", size:"240x300",  class: "image" %>
          <% end %>
        </td>
      </tr>
    </div>
    <div class="col-md-8">
      <table class='table'>
        <tr>
          <th><%=  "タイトル" %></th>
          <td><%= @book.title %></td>
        </tr>
        <tr>
          <th><%= "著者" %></th>
          <td><%= @book.author %></td>
        </tr>
        <tr>
          <th><%=  "出版社" %></th>
          <td><%= @book.publisher_name %></td>
        </tr>
        <tr>
          <th><%=  "ジャンル" %></th>
          <td><%= @book.genre.name %></td>
        </tr>
        <tr>
          <th><%= "オリジナルキャッチコピー" %></th>
          <td><%= @book.catchphrase %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class="md-12">
        <td><%= "紹介文" %></td>
        <td><%= @book.body %></td>

      <% if @book.member == current_member %>
        <td>
          <%= form_with model: @book, local: true do |f| %>
            <%= render "public/books/form", f: f %>
            <%= f.submit '変更' %>
          <% end %>
        </td>
        <td><%= link_to '編集', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to '削除', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
      <% end %>
    </div>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class="md-12">
      <h4>コメント一覧</h4>
      <%= render "public/post_comments/index", book: @book %>
    </div>
  </div>
</div>