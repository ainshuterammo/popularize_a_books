<div class='container'>
  <div class='row'>
    <div class="col-md-4">
			<section class="inner">
				<h2 class="section-ttl">ジャンル管理</h2>
				<div class="mb3">
					<h3>ジャンル一覧</h3>
					<table class="genre_info has_border">
						<thead>
							<tr>
								<th>ジャンル名</th>
							</tr>
						</thead>
						<tbody>
							<% @genres.each do |genre| %>
								<tr>
									<td>
										<%= genre.name %>
										<%= link_to '削除', admin_genre_path(genre), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
									</td>
								</tr>
							<% end %>
						</tbody>
					</table>
					<%= paginate @genres %>
				</div>
			</section>
   </div>
  </div>
</div>